<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Score: "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/find_pair_score"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_bar_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="319dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/progress_bar" />

        <TextView
            android:id="@+id/progress_count"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="20s"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/find_pair_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center">
        <com.groups.BrainTrainApp.Components.Common.ButtonCustom
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/brain"
            android:src="@drawable/border_square"
            />
    </LinearLayout>

</LinearLayout>